@model P5Parcial.Models.usuario

@{
    Layout = null;
}
<!DOCTYPE html>
 
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Bootstrap/mycss.css" rel="stylesheet" />
    <link href="~/Bootstrap/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/Bootstrap/bootstrap.css" rel="stylesheet" />
    <title>Ingresar</title>
</head>
<body>
    @using (Html.BeginForm())
    {
    <div>
        <style>
            table, th, td {
                border: 1px solid;
            }
        </style>
        <img src="~/imagenes/background.jpg" class="bg" />
        <div class="row">
            <div class="col-md-4">
                <div id="cuadro">
                    <p>Hola: @P5Parcial.Models.usuario.tablamain.Rows[0][3]</p>
                    <div>
                        <table>
                            <tr>
                                <td>Usuario: </td>
                                <td>@P5Parcial.Models.usuario.tablamain.Rows[0][3]</td>
                            </tr>
                            <tr>
                                <td>Genero</td>
                                @if (Convert.ToInt32(@P5Parcial.Models.usuario.tablamain.Rows[0][6]) == 1)
                                {
                                    <td>Masculino</td>
                                }
                                else if (Convert.ToInt32(@P5Parcial.Models.usuario.tablamain.Rows[0][6]) == 2)
                                {
                                    <td>Femenino</td>
                                }
                            </tr>
                            <tr>
                                <td>Edad: </td>
                                <td>@P5Parcial.Models.usuario.tablamain.Rows[0][10]</td>
                            </tr>
                            <tr>
                                <td>Peso: </td>
                                <td>@P5Parcial.Models.usuario.tablamain.Rows[0][4]</td>
                            </tr> 
                            <tr>
                                <td>Altura: </td>
                                <td>@P5Parcial.Models.usuario.tablamain.Rows[0][5]</td>
                            </tr>
                            <tr>
                                <td>Frecuencia ejercicio: </td>
                                @switch (Convert.ToInt32(@P5Parcial.Models.usuario.tablamain.Rows[0][7]))
                                {
                                    case 1:
                                        <td>Poco o ningún ejercicio</td>
                                        break;
                                    case 2:
                                        <td>Ejercicio ligero</td>
                                        break;
                                    case 3:
                                        <td>Ejercicio Moderado</td>
                                        break;
                                    case 4:
                                        <td>Ejercicio Fuerte</td>
                                        break;
                                    case 5:
                                        <td>Ejercicio profesional o extremo</td>
                                        break;
                                }
                            </tr>
                            <tr>
                                <td>Tasa Metabólica Basal(TMB): </td>
                                <td>@P5Parcial.Models.usuario.tablamain.Rows[0][8]</td>
                            </tr> 
                            <tr>
                                <td>Indice Masa Corporal(IMC): </td>
                                <td>@P5Parcial.Models.usuario.tablamain.Rows[0][9]</td>
                            </tr> 
                            <tr>
                                <td>Kilos a perder por semana: </td>
                                @switch (Convert.ToInt32(@P5Parcial.Models.usuario.tablamain.Rows[0][11]))
                                {
                                    case 1:
                                        <td>1 Kg</td>
                                        break;
                                    case 2:
                                        <td>0.5 Kg</td>
                                        break;
                                }
                            </tr>
                            <tr>
                                <td>Composición Corporal: </td>
                                <td>@P5Parcial.Models.usuario.tablamain.Rows[0][12]</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div  id="cuadro">
                    <p style="text-align:center">Su progreso</p>
                    <div>
                        <table>
                            <tr>
                                <td>Su peso actual: </td>
                                <td>@P5Parcial.Models.usuario.tablamain.Rows[0][4]</td>
                            </tr>
                            <tr>
                                <td>Su peso ideal: </td>
                                <td>@Model.ideal(Convert.ToInt32(@P5Parcial.Models.usuario.tablamain.Rows[0][5]), Convert.ToInt32(Convert.ToInt32(@P5Parcial.Models.usuario.tablamain.Rows[0][6])))</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div id="cuadro">
                    <div>
                        <p style="text-align:center">Registre su progreso</p>
                        <br />
                       <table>
                           <tr>
                               <td>N°</td>
                               <td>Peso</td>
                               <td>IMC</td>
                               <td>Fecha</td>
                           </tr>
                           @for (int i = 0; i < P5Parcial.Models.usuario.usetbl.Rows.Count; i++)
                           {
                               <tr>

                                   <td>@P5Parcial.Models.usuario.usetbl.Rows[0][0]</td>
                                   <td>@P5Parcial.Models.usuario.usetbl.Rows[0][1]</td>
                                   <td>@P5Parcial.Models.usuario.usetbl.Rows[0][2]</td>
                                   <td>@P5Parcial.Models.usuario.usetbl.Rows[0][3]</td>
                               </tr>
                           }
                       </table>
                    </div> 
                    <div>
                        @Html.ValidationSummary()
                        <div class="form-group">
                            <label for="exampleInputEmail1">Registre su peso</label>
                            @Html.TextBoxFor(Model => Model.peso, new { @class = "form-control" })
                        </div>
                        <input class="btn btn-primary" type="submit" value="Registrar" />
                    </div>                   
                </div>                             
            </div>
            <div class="col-md-4">
                <div  id="cuadro">
                    <p>Su cuadro nutricional</p>
                    @if (Convert.ToInt32(@P5Parcial.Models.usuario.tablamain.Rows[0][8]) < 1200)
                    {
                        <p>
                            Desayuno: 1 proteína + 1 fruta (+ verduras, si deseas)<br />
                            Almuerzo: 1 proteína + 1 verdura + ensalada verde + 1 aderezo<br />
                            Bocadillo: 1 bocadillo de proteína + 1 fruta o verdura<br />
                            Cena: 1 proteína + 1 almidón/grano + 2 verduras + ensalada verde + 1 aderezo<br />
                            Bocadillo: 1 frut
                        </p>
                    }
                    else if (Convert.ToInt32(@P5Parcial.Models.usuario.tablamain.Rows[0][8]) > 1200 && Convert.ToInt32(@P5Parcial.Models.usuario.tablamain.Rows[0][8]) <= 1500)
                    {
                        <p>
                            Desayuno: 1 Proteína + 1 Fruta (+vegetales, si deseas)<br />
                            Almuerzo: 1 Proteína + 1 Vegetal + ensalada verde +almidón + 1 aderezo +1 fruta<br />
                            Bocadillo: 1 bocadillo de Proteína + 1 vegetal<br />
                            Merienda: 1 Proteína+1 Grano/Almidón + 2 Vegetales + Ensalada Verde + 1 aderezo<br />
                            Bocadillo: 1 Fruta
                        </p>
                    }
                    else if (Convert.ToInt32(@P5Parcial.Models.usuario.tablamain.Rows[0][8]) > 1500 && Convert.ToInt32(@P5Parcial.Models.usuario.tablamain.Rows[0][8]) <= 1800)
                    {
                        <p>
                            Desayuno: 1 Proteína + 1 Fruta (+vegetales, si lo deseas)<br />
                            Bocadillo: Bocadillo de proteína<br />
                            Almuerzo: 2 Proteínas + 2 Vegetales + ensalada verde +granos + 1 aderezo +1 fruta<br />
                            Bocadillo: 1 bocadillo de Proteína + 1 fruta o vegetal<br />
                            Cena: 2 Proteínas + 1 grano/almidón + 2 Vegetales + Ensalada Verde + 1 Aderezo<br />
                            Bocadillo: 1 Fruta
                        </p>
                    }
                    else if (Convert.ToInt32(@P5Parcial.Models.usuario.tablamain.Rows[0][8]) > 1800)
                    {
                        <p>
                            Desayuno: 2 Proteína + 1 Fruta (+vegetales, si lo deseas) + 1 granos/almidón<br />
                            Bocadillo: Bocadillo de proteína<br />
                            Almuerzo: 2 Proteínas + 2 Vegetales + ensalada verde + 1 grano/almidón + 1 aderezo +1 fruta<br />
                            Bocadillo: 1 bocadillo de Proteína + 1 fruta o vegetal<br />
                            Cena: 2 Proteínas + 2 grano/almidón + 2 Vegetales + Ensalada Verde + 1 Aderezo<br />
                            Bocadillo: 1 Fruta
                        </p>
                    }
         </div>                
            </div>           
        </div>
    </div>
    }
</body>
</html>
