@model P5Parcial.Models.usuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrar</title>
    <link href="~/Bootstrap/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/Bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Bootstrap/mycss.css" rel="stylesheet" />
</head>
<body>
    <div class="cuerpo">
        <div class="row">
            <img class="col-md-6" src="~/imagenes/background1.jpg" />
            <div style="border-style:ridge;border-color:grey;border-radius:5px;padding-top:40px" class="col-md-6">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()
                    <table align="center">
                        <tr>
                            <td>Usuario:</td>
                            <td class="margenCol">@Html.TextBoxFor(x => x.nombreusuario, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <td>Correo:         </td>
                            <td class="margenCol">@Html.TextBoxFor(x => x.correo, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <td>Contraseña:     </td>
                            <td class="margenCol">@Html.TextBoxFor(x => x.contrasena, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <td>Peso:     </td>
                            <td class="margenCol">@Html.TextBoxFor(x => x.peso, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <td>Altura:     </td>
                            <td class="margenCol">@Html.TextBoxFor(x => x.altura, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <td>Edad:     </td>
                            <td class="margenCol">@Html.TextBoxFor(x => x.edad, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <td>Sexo:     </td>
                            <td class="margenCol">@Html.DropDownListFor(x => x.sexo, new[] {
                                                new SelectListItem() { Text="Masculino", Value = "1"},
                                                new SelectListItem() { Text="Femenino", Value = "2" }
                          })</td>
                        </tr>
                        <tr>
                            <td>Cuantos kilos quiere perder por semana?:     </td>
                            <td class="margenCol">
                                @Html.DropDownListFor(x => x.kxp, new[] {
                                                new SelectListItem() { Text="1 Kg", Value = "1"},
                                                new SelectListItem() { Text="0.5 Kg", Value = "2"}
                          })
                        </td>
                    </tr>
                        <tr>
                            <td>Frecuencia con que se ejercita:     </td>
                            <td class="margenCol">
                                @Html.DropDownListFor(x => x.frecuencia, new[] {
                                                new SelectListItem() { Text="Poco o ningún ejercicio", Value = "1"},
                                                new SelectListItem() { Text="Ejercicio ligero (1-3 días por semana)", Value = "2" },
                                                new SelectListItem() { Text="Ejercicio Moderado (3-5 días por semana)", Value = "3" },
                                                new SelectListItem() { Text="Ejercicio Fuerte (6 días por semana)", Value = "4" },
                                                new SelectListItem() { Text="Ejercicio profesional o extremo", Value = "5" }
                          })
                        </td>
                    </tr>
                    </table>
                    <div style="text-align:center;padding-top:20px">
                        <input class="btn btn-primary" type="submit" value="Registrarse" />
                        <label style="color:red; display:block">@ViewBag.msg</label>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
